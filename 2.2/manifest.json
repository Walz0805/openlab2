{
  "manifest_version": 3,
  "name": "B站夜间模式",
  "version": "1.0",
  "description": "将 B 站页面切换到夜间模式。",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "下载1.png",
      "48": "下载2.png",
      "128": "下载3.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.bilibili.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "下载1.png",
    "48": "下载2.png",
    "128": "下载3.png"
  }
}
